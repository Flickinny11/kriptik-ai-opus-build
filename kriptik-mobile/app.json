{
  "expo": {
    "name": "KripTik AI",
    "slug": "kriptik-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "kriptik",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0C0A09"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kriptik.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "KripTik uses camera for QR code scanning and Clone Mode",
        "NSMicrophoneUsageDescription": "KripTik uses microphone for Voice Architect feature",
        "NSFaceIDUsageDescription": "KripTik uses Face ID for secure authentication"
      },
      "associatedDomains": [
        "applinks:app.kriptik.ai",
        "applinks:kriptik.ai"
      ],
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0C0A09"
      },
      "package": "com.kriptik.mobile",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            { "scheme": "kriptik" },
            { "scheme": "https", "host": "app.kriptik.ai", "pathPrefix": "/mobile" },
            { "scheme": "https", "host": "kriptik.ai", "pathPrefix": "/mobile" }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-notifications",
      "expo-camera",
      "expo-local-authentication",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#0C0A09",
          "image": "./assets/splash.png",
          "imageWidth": 200
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID"
      }
    }
  }
}
